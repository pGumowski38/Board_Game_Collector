<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="543dp">

        <TableLayout
            android:id="@+id/gamesTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0009A2"
            android:outlineProvider="bounds">

            <TableRow
                android:id="@+id/gamesRow2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/gameRankText2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="2"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/gameImage2"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="247dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gameTitleText2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="Gloomhaven"
                            android:textColor="#0E84E1"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gameYearText2"
                            android:layout_width="103dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="(2017)" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gameDescriptionText2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:text="Vanquish monsters with strategic cardplay. Fulfill your quest to leave your legacy!" />

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="231dp"
            android:layout_height="61dp"
            android:layout_marginBottom="24dp"
            android:baselineAligned="false"
            android:text="Add New Game" />

        <Space
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>